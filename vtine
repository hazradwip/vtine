  <meta charset="UTF-8">
  <title>Valentine</title>

  <style>
    body {
      height: 100vh;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: Arial, sans-serif;
      background: linear-gradient(to bottom, #f7c6d0, #fbe4ea);
      overflow: hidden;
    }

    .card {
      background: rgba(255, 255, 255, 0.65);
      padding: 40px 60px;
      border-radius: 14px;
      text-align: center;
      box-shadow: 0 10px 30px rgba(0,0,0,0.15);
      z-index: 2;
    }

    h1 {
      color: #333;
      font-size: 32px;
      margin-bottom: 30px;
    }

    .buttons {
      position: relative;
      width: 300px;
      height: 120px;
      margin: auto;
    }

    button {
      padding: 12px 28px;
      font-size: 18px;
      border-radius: 25px;
      border: none;
      cursor: pointer;
    }

    #yes {
      background: linear-gradient(135deg, #ff5f7e, #ff2e63);
      color: white;
      box-shadow: 0 6px 15px rgba(255, 46, 99, 0.4);
    }

    /* üî• NO button: fixed size + unclickable */
    #no {
      position: absolute;
      right: 0;
      background: transparent;
      border: 2px solid #999;
      color: #555;

      width: 90px;
      height: 44px;

      pointer-events: none;
      user-select: none;
    }

    .heart {
      position: fixed;
      top: -10px;
      font-size: 24px;
      animation: fall linear forwards;
      z-index: 1;
    }

    @keyframes fall {
      to {
        transform: translateY(110vh);
        opacity: 0;
      }
    }

    .confetti {
      position: fixed;
      width: 10px;
      height: 10px;
      top: -10px;
      animation: confettiFall linear forwards;
      z-index: 1;
    }

    @keyframes confettiFall {
      to {
        transform: translateY(110vh) rotate(360deg);
        opacity: 0;
      }
    }
  </style>
